@model UserForLoginDto

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container">
        <img src="https://www.konusarakogren.com/images/assets/img/logo.png" style="height:32px;">
        @*<a class="navbar-brand" asp-area="" asp-page="/Index">KonusarakOgren.com</a>*@
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            @if (!string.IsNullOrEmpty(Model.UserName))
            {
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Quiz" asp-action="Add">Sınav Oluştur</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Article" asp-action="List">Yazılar</a>
                    </li>
                </ul>
                <div class="nav-item d-flex">
                    <a class="nav-link text-dark" href="#">Hoşgeldin <strong>@Model.UserName</strong></a>
                    <a class="nav-link text-dark" asp-controller="Auth" asp-action="Logout">Çıkış Yap</a>
                </div>
            }
            else
            {
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Quiz" asp-action="List">Sınav Listesi</a>
                    </li>
                </ul>
                <div class="nav-item d-flex">
                    <a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">Giriş Yap</a>
                </div>
            }
        </div>
    </div>
</nav>
