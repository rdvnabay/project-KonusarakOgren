@model QuizAddDto[]
<form asp-action="Add" method="post">
    @await Component.InvokeAsync("TitleList")
    @for (int i = 0; i < 4; i++)
    {
        <div class="form-group">
            <label asp-for="@Model[i].Question">Soru @(i+1)</label>
            <input asp-for="@Model[i].Question" type="text" class="form-control">
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input asp-for="@Model[i].OptionA" type="text" class="form-control" placeholder="A)">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <input asp-for="@Model[i].OptionB" type="text" class="form-control" placeholder="B)">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input asp-for="@Model[i].OptionC" type="text" class="form-control" placeholder="C)">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <input asp-for="@Model[i].OptionD" type="text" class="form-control" placeholder="D)">
                </div>
            </div>
        </div>
        <div class="col-md-8 mx-auto">
            <div class="form-group">
                <label asp-for="@Model[i].CorrectAnswer">Doğru Cevap Seç</label>
                <select class="form-control alert-success">
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                </select>
            </div>
        </div>
        <input type="hidden" asp-for="@Model[i].ArticleId">
    }
    <button type="submit" class="btn btn-primary btn-lg btn-block col-md-8 mx-auto">SINAV OLUŞTUR</button>
</form>


