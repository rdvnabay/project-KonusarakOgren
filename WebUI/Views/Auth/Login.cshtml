@model UserForLoginDto
<div class="container mx-auto">
    <div class="row">
        <div class="col-md-6 mx-auto mt-5">
            <form class="form-signin" asp-action="Login" method="post">
                <h1 class="h3 mb-3 font-weight-normal">Kullanıcı Girişi</h1>
                <div class="form-group">
                    <label asp-for="UserName" class="sr-only"></label>
                    <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" required autofocus>
                    <span class="small text-danger" asp-validation-for="UserName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="sr-only"></label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Şifre" required>
                    <span class="small text-danger" asp-validation-for="Password"></span>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Giriş Yap</button>
            </form>
            <span class="small text-danger">@ViewBag.UserNotFound</span>
        </div>
    </div>
</div>

@section validationScript{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
